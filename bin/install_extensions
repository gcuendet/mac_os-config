#! /usr/bin/env bash

# Installs application extensions.

install_git_app "$CSL_REPO_UTL" "$CSL_INSTALL_PATH"
install_git_app "$VIM_AIRLINE_EXTENSION_URL" "$VIM_AIRLINE_EXTENSION_PATH"
install_git_app "$VIM_COMMENTARY_EXTENSION_URL" "$VIM_COMMENTARY_EXTENSION_PATH"
install_git_app "$VIM_FUGITIVE_EXTENSION_URL" "$VIM_FUGITIVE_EXTENSION_PATH"
install_git_app "$VIM_GIT_GUTTER_EXTENSION_URL" "$VIM_GIT_GUTTER_EXTENSION_PATH"
install_git_app "$VIM_SNIPPETS_EXTENSION_URL" "$VIM_SNIPPETS_EXTENSION_PATH"
install_git_app "$VIM_SPLITJOIN_EXTENSION_URL" "$VIM_SPLITJOIN_EXTENSION_PATH"
install_git_app "$VIM_SUPERTAB_EXTENSION_URL" "$VIM_SUPERTAB_EXTENSION_PATH"
install_git_app "$VIM_ULTISNIPS_EXTENSION_URL" "$VIM_ULTISNIPS_EXTENSION_PATH"
install_git_app "$VIM_YOUCOMPLETEME_EXTENSION_URL" "$VIM_YOUCOMPLETEME_EXTENSION_PATH"
install_git_project "$VIM_YOUCOMPLETEME_EXTENSION_URL" "master" "youcompleteme" "./install.py --all"
